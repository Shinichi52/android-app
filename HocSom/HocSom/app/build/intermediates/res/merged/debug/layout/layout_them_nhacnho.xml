<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:minWidth="300dp"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm Thời Gian Nhắc Nhở"
        android:textAlignment="center"
        android:textSize="21sp"
        android:padding="10dp"
        android:textColor="#000"
        android:background="@drawable/custom_dialog_themchude1"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="30dp"
        />

    <EditText
        android:id="@+id/edtnoidung"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:hint="Nhập nội dụng..."
        android:layout_marginRight="15dp"
        android:textAlignment="center"
        android:layout_marginLeft="15dp"
        android:singleLine="true"
        android:text=""
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:background="@drawable/custom_btnchude1"
        />
    <TextView
        android:id="@+id/tvChonThoiGian"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:hint="Chon thời gian..."
        android:layout_marginRight="15dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:singleLine="true"
        android:background="@drawable/custom_btnchude1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        >
        <Button
            android:id="@+id/btnback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/custom_btnchude1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:text="Quay lại"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/custom_btnchude1"
            android:text="Đồng ý"
            android:id="@+id/btndongy"
            />
    </LinearLayout>

</LinearLayout>